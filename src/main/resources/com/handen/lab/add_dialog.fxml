<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="200.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.handen.lab.controller.AddDialogController">
    <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
      <ComboBox prefWidth="150.0" fx:id="position_combobox"/>

        <Label text="Name">
            <font>
                <Font size="15.0" />
            </font>
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </Label>
        <TextArea fx:id="name_text_area" onKeyPressed="#focusNextTextArea" prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </TextArea>
        <Label text="Surname">
            <font>
                <Font size="15.0" />
            </font>
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </Label>
        <TextArea fx:id="surname_text_area" onKeyPressed="#focusNextTextArea" prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </TextArea>
        <Label text="Salary">
            <font>
                <Font size="15.0" />
            </font>
            <VBox.margin>
                <Insets top="5.0" />
            </VBox.margin>
        </Label>
        <TextArea fx:id="salary_text_area" onKeyPressed="#focusNextTextArea" prefHeight="100.0" prefWidth="200.0">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </TextArea>
        <Label fx:id="errorLabel" textFill="red" visible="false">
            <font>
                <Font size="15.0" />
            </font>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0" />
            </VBox.margin>
        </Label>
        <Button fx:id="add_button" focusTraversable="false" mnemonicParsing="false" onAction="#OnAddButtonClick" text="Add" />
        <padding>
            <Insets left="10.0" right="10.0" />
        </padding>
    </VBox>
</AnchorPane>
