<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="250.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.handen.lab.controller.AddDialogController">

    <VBox prefHeight="277.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <Label text="Surname">
                <font>
                    <Font size="15.0" />
                </font>
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
            </Label>
            <TextArea fx:id="surname_text_area" onKeyPressed="#focusNextTextArea" prefHeight="100.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets right="120.0" top="10.0" />
                </VBox.margin>
            </TextArea>
            <Label layoutX="10.0" layoutY="10.0" text="Phone">
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
            <TextArea fx:id="phone_text_area" layoutX="10.0" layoutY="27.0" onKeyPressed="#focusNextTextArea" prefHeight="100.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets right="120.0" top="10.0" />
                </VBox.margin>
            </TextArea>
            <Label layoutX="10.0" layoutY="191.0" text="Year">
                <VBox.margin>
                    <Insets top="5.0" />
                </VBox.margin>
                <font>
                    <Font size="15.0" />
                </font>
            </Label>
            <TextArea fx:id="year_text_area" layoutX="10.0" layoutY="208.0" onKeyPressed="#focusNextTextArea" prefHeight="100.0" prefWidth="200.0">
                <VBox.margin>
                    <Insets right="120.0" top="10.0" />
                </VBox.margin>
            </TextArea>
            <Label fx:id="errorLabel" prefHeight="21.0" prefWidth="392.0" textFill="red" visible="false">
                <font>
                    <Font size="15.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="5.0" top="5.0" />
                </VBox.margin>
            </Label>
            <Button fx:id="add_button" focusTraversable="false" mnemonicParsing="false" onAction="#OnAddButtonClick" text="Add" />
      <padding>
         <Insets left="20.0" right="20.0" />
      </padding>
    </VBox>

</AnchorPane>
