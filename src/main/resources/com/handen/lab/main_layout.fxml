<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="container" prefHeight="400.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.handen.lab.controller.MainController">

    <MenuBar>
        <Menu text="File">
            <MenuItem fx:id="menu_load" onAction="#OnMenuLoadClicked" text="Load">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP"
                                        shortcut="UP"/>
                </accelerator>
            </MenuItem>
            <MenuItem fx:id="menu_save" onAction="#OnMenuSaveClicked" text="Save">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP"
                                        shortcut="UP"/>
                </accelerator>
            </MenuItem>
        </Menu>
    </MenuBar>

    <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="25.0">
        <top>
            <HBox prefHeight="15.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            </HBox>
        </top>
        <right>
            <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Label text="Name">
                    <font>
                        <Font size="15.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </Label>
                <TextArea fx:id="name_text_area" onKeyPressed="#focusNextTextArea"
                          prefHeight="100.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </TextArea>
                <Label text="Surname">
                    <font>
                        <Font size="15.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </Label>
                <TextArea fx:id="surname_text_area" onKeyPressed="#focusNextTextArea"
                          prefHeight="100.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </TextArea>
                <Label text="Salary">
                    <font>
                        <Font size="15.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </Label>
                <TextArea fx:id="salary_text_area" onKeyPressed="#focusNextTextArea"
                          prefHeight="100.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </TextArea>

                <Label text="Mentor" fx:id="mentorLabel">
                    <font>
                        <Font size="15.0"/>
                    </font>
                    <VBox.margin>
                        <Insets top="5.0"/>
                    </VBox.margin>
                </Label>
                <TextArea fx:id="mentor_text_area" onKeyPressed="#focusNextTextArea"
                          prefHeight="100.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </TextArea>

                <Label fx:id="errorLabel" textFill="red" visible="false">
                    <font>
                        <Font size="15.0"/>
                    </font>
                    <VBox.margin>
                        <Insets bottom="5.0" top="5.0"/>
                    </VBox.margin>
                </Label>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <Button fx:id="add_button" focusTraversable="false" mnemonicParsing="false"
                            onAction="#OnAddButtonClick" text="Add"/>
                    <Button fx:id="save_button" focusTraversable="false" mnemonicParsing="false"
                            onAction="#OnSaveButtonClick" text="Save">
                        <HBox.margin>
                            <Insets left="20.0" right="20.0"/>
                        </HBox.margin>
                    </Button>
                    <Button fx:id="delete_button" focusTraversable="false" mnemonicParsing="false"
                            onAction="#OnDeleteButtonClick" text="Delete"/>
                    <padding>
                        <Insets left="5.0"/>
                    </padding>
                </HBox>
                <padding>
                    <Insets left="10.0" right="10.0"/>
                </padding>
            </VBox>
        </right>
        <center>
            <TableView fx:id="table" focusTraversable="false" prefHeight="200.0" prefWidth="500.0"
                       BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn prefWidth="100.0" text="Name">
                        <cellValueFactory>
                            <PropertyValueFactory property="name"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="150.0" text="Surname">
                        <cellValueFactory>
                            <PropertyValueFactory property="surname"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="150.0" text="Position">
                        <cellValueFactory>
                            <PropertyValueFactory property="positionTitle"/>
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="150.0" text="Salary">
                        <cellValueFactory>
                            <PropertyValueFactory property="salary"/>
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </center>
    </BorderPane>
</AnchorPane>