<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="container" prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.handen.lab.controller.MainController">

    <MenuBar>
        <Menu text="File">
            <MenuItem fx:id="menu_load" onAction="#OnMenuLoadClicked" text="Load">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="L" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
            <MenuItem fx:id="menu_save" onAction="#OnMenuSaveClicked" text="Save">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
            <MenuItem fx:id="menu_help" onAction="#OnMenuHelpClicked" text="Help">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="H" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
            <MenuItem fx:id="menu_about" onAction="#OnMenuAboutClicked" text="About">
                <accelerator>
                    <KeyCodeCombination alt="UP" code="A" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                </accelerator>
            </MenuItem>
        </Menu>
    </MenuBar>

    <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="25.0">
        <top>
            <HBox prefHeight="15.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                <padding>
                    <Insets left="15.0" />
                </padding>
                <Label text="Surname:">
               <HBox.margin>
                  <Insets top="10.0" />
               </HBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
               <padding>
                  <Insets right="2.0" />
               </padding></Label>
                <TextArea fx:id="search_surname" focusTraversable="false" prefHeight="200.0" prefWidth="200.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></TextArea>
                <Label text="From year:">
                    <HBox.margin>
                        <Insets left="50.0" top="10.0" />
                    </HBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
                </Label>
                <TextArea fx:id="search_year" focusTraversable="false" prefHeight="200.0" prefWidth="200.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></TextArea>
            <BorderPane.margin>
               <Insets bottom="10.0" />
            </BorderPane.margin>
            </HBox>
        </top>
        <right>
            <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Label text="Surname">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin></Label>
                <TextArea fx:id="surname_text_area" onKeyPressed="#focusNextTextArea" prefHeight="100.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></TextArea>
                <Label layoutX="10.0" layoutY="10.0" text="Phone">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font></Label>
                <TextArea fx:id="phone_text_area" layoutX="10.0" layoutY="27.0" onKeyPressed="#focusNextTextArea" prefHeight="100.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></TextArea>
                <Label layoutX="10.0" layoutY="191.0" text="Year">
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font></Label>
                <TextArea fx:id="year_text_area" layoutX="10.0" layoutY="208.0" onKeyPressed="#focusNextTextArea" prefHeight="100.0" prefWidth="200.0">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></TextArea>
                <Label fx:id="errorLabel" textFill="red" visible="false">
               <font>
                  <Font size="15.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin></Label>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <Button fx:id="add_button" focusTraversable="false" mnemonicParsing="false" onAction="#OnAddButtonClick" text="Add" />
                    <Button fx:id="save_button" focusTraversable="false" mnemonicParsing="false" onAction="#OnSaveButtonClick" text="Save">
                  <HBox.margin>
                     <Insets left="20.0" right="20.0" />
                  </HBox.margin></Button>
                    <Button fx:id="delete_button" focusTraversable="false" mnemonicParsing="false" onAction="#OnDeleteButtonClick" text="Delete" />
               <padding>
                  <Insets left="5.0" />
               </padding>
                </HBox>
            <padding>
               <Insets left="10.0" right="10.0" />
            </padding>
            </VBox>
        </right>
        <center>
            <TableView fx:id="table" focusTraversable="false" prefHeight="200.0" prefWidth="400.0" BorderPane.alignment="CENTER">
                <columns>
                    <TableColumn prefWidth="200.0" text="Surname">
                        <cellValueFactory>
                            <PropertyValueFactory property="surname" />
                        </cellValueFactory>
                    </TableColumn>

                    <TableColumn prefWidth="150.0" text="Phone">
                        <cellValueFactory>
                            <PropertyValueFactory property="phone" />
                        </cellValueFactory>
                    </TableColumn>
                    <TableColumn prefWidth="100.0" text="Year">
                        <cellValueFactory>
                            <PropertyValueFactory property="yearString" />
                        </cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </center>
    </BorderPane>
</AnchorPane>
